{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "shell: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"data/data.cpp main.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "shell: g++ build active file",
			"command": "g++",
			"args": [
				"-g",
				"${workspaceFolder}/data/data.cpp",
				"${workspaceFolder}/data/datapoint.cpp",
				"${workspaceFolder}/loss/square_loss.cpp",
				"${workspaceFolder}/model/perceptron.cpp",
				"${workspaceFolder}/main.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}