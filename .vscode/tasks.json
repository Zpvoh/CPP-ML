{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "shell: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"data/data.cpp main.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "shell: g++ build active file",
			"command": "g++",
			"args": [
				"-g",
				"${workspaceFolder}/src/data/data.cpp",
				"${workspaceFolder}/src/data/datapoint.cpp",
				"${workspaceFolder}/src/data/data_loader.cpp",
				"${workspaceFolder}/src/data/dataset.cpp",
				"${workspaceFolder}/src/loss/square_loss.cpp",
				"${workspaceFolder}/src/model/perceptron.cpp",
				"${workspaceFolder}/src/main.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}